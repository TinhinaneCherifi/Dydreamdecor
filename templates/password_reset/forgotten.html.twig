{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Dydream Decor{% endblock %}

{% block content %}
<div>
    {% for message in app.flashes('notice') %}
        <div class="alert alert-info">{{ message }}</div>
    {% endfor %}

    <form method="post">

        <h1 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
        <hr>
        <label for="inputEmail">Votre email</label>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Votre adresse email" autocomplete="email" required autofocus>
        <button class="btn btn-lg btn-info btn-block my-3" type="submit">Réinitialiser</button>
        <p class="text-center"><a href="{{ path('app_login')}}">Revenir à la page de connexion</a></p>
    </form>
</div>

{% endblock %}
