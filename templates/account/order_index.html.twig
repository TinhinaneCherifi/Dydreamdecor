
{% extends 'base.html.twig' %}

{% block title %}Mes commandes - D-Day Decor{% endblock %}

{% block content %}

    <a href="{{ path('account') }}">
        <img src="{{ asset('assets/icons/arrow-left-square-fill.svg') }}" alt="Retour">
    </a>
    <h1 class="text-center">Mes commandes</h1>
    <br>
    {% if orders|length == 0 %}
    <hr>
        <p class="text-center">Vous n'avez aucune commande pour le moment.</p>
        <a class="btn btn-dark btn-sm" href="{{ path('item') }}">Voir catalogue des articles</a>
        {% else %}
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Référence</th>
                        <th scope="col">Statut</th>
                        <th scope="col">Passée le </th>
                        <th scope="col">Articles</th>
                        <th scope="col">Total</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.ref }}</td>
                            <td>
                                {% if order.status == 1 %}
                                    Paiement accepté
                                {% elseif order.status == 2 %}
                                    En cours de préparation
                                {% elseif order.status == 3 %}
                                    En cours de livraison
                                {% elseif order.status == 4 %}
                                    Livrée
                                {% endif %}
                            </td>
                            <td>{{ order.createdAt|date('d/m/Y') }}</td>
                            <td>{{ order.orderDetails|length }}</td>
                            <td>{{ ((order.carrierPrice + order.getTotal) / 100)|number_format(2, ',', '.') }}€</td>
                            <td class="text-right"><a href="{{ path('account_order_show', { 'ref' : order.ref} ) }}">Voir détail</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
    {% endif %}
{% endblock %}
